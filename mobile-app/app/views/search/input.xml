<Alloy>
    <View id="searchInputView" layout="vertical">
    	
    	<Label textid="search.input.title"/>
	    <View class="heightToContent" layout="horizontal">	        
	        <TextField id="searchPhrase" onReturn="doSearch"/>
	        <View class="searchSpacer" />
	        <Button id="searchButton" titleid="search.button.searchProducts" onClick="doSearch"/>
        </View>
        
        
        <Label id="numberOfResults" textid="search.label.pleaseEnterSearchPhrase" />
        <TableView id="searchResultTable" visible="false" onClick = "onSearchItemClicked"/>

    </View>
</Alloy>
